# Usa una imagen base de Python
FROM python:3.10

# Define el directorio de trabajo dentro del contenedor
WORKDIR /app

# Copia solo requirements.txt e instala dependencias antes de copiar todo el código
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# Copia el código fuente del backend al contenedor
COPY . .
COPY backend /app/backend
COPY .env /app/.env

# Expone el puerto en el que corre el backend (ajústalo según el framework)
EXPOSE 8000

# Comando para ejecutar el backend
CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
